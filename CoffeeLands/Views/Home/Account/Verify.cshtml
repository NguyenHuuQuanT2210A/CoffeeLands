@{
    ViewData["Title"] = "Verify";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify</title>
</head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<style>
    .tick-container {
        display: inline-block;
        position: relative;
    }

        .tick-container::before {
            content: "";
            position: absolute;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 120px; /* Điều chỉnh kích thước vòng tròn theo ý của bạn */
            height: 120px; /* Điều chỉnh kích thước vòng tròn theo ý của bạn */
            border-radius: 50%;
            border: 5px solid #2bdd13; /* Màu xanh của vòng tròn */
            z-index: -1;
        }
</style>
<body>
    <div>
        <div style="text-align: center; margin: 200px 560px;">
            <div class="tick-container">
                <i class="fa-solid fa-check fa-2xl" style="color: #2bdd13; font-size: 100px;"></i>
            </div>
            <div style="margin-top: 60px;">
                <h1>Email Verified</h1>
                <p style="font-size: 19px;">Your email was successfully verified.</p>
                <div style="padding: 15px 0;background-color: #2bdd13;border-radius: 5px;">
                    <a asp-action="Login" asp-controller="Users" style="text-decoration: none;color: #f1f1f1;font-size: 20px;">Back To Home</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
