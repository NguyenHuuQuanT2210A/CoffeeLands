                            <h5 class="text-right" style="margin-right: 15px;">Số tiền cần phải thanh toán: $@Model.Grand_total </h5>
                            <div>
                                <a asp-controller="Orders" asp-action="Repayment" asp-route-id="@Model.Id" class="btn btn-warning" style="float: right;margin-bottom: 20px;border-radius: 1px;color: white;">Thanh Toán Laị!</a>
                            </div>
                        }
                        else
                        {
                            <div class="container" style="margin-top:200px">
                                <h1>Thank You!</h1>
                                <a asp-controller="Home" asp-action="Index">Back To Home!</a>
                            </div>
                        }
                    </div>
                    <div><a asp-controller="Home" asp-action="Index">Back To Home!</a></div>
                </div>

            </div>

        </div>
    </section>
}

     