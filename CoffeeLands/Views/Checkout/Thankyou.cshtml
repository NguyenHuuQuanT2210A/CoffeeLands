@model CoffeeLands.Models.OrderProduct

@{
    ViewData["Title"] = "Thank You";
}

@section Styles {
    <style>
        td {
            color: white;
        }
    </style>
}
@if (Model != null)
{
    <section class="home-slider owl-carousel">

        <div class="slider-item" style="background-image: url(images/bg_3.jpg);" data-stellar-background-ratio="0.5">
            <div class="overlay"></div>
            <div class="container">
                <div class="row slider-text justify-content-center align-items-center">

                    <div class="col-md-7 col-sm-12 text-center ftco-animate">
                        <h1 class="mb-3 mt-5 bread">Thank You!</h1>
                        <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Thank You</span></p>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section ftco-cart">
        <div class="container">
            <div class="row">
                <div class="col-md-12 ftco-animate">
                    <div class="cart-list">
                        @if (Model != null && Model.OrderDetails != null)
                        {
                            <h1 class="text-center">Thank you ^^</h1>

                            <h3 class="text-center">Your Order @Model.Id has been placed</h3>
                            <h4>@ViewBag.OrderId</h4>
                            <h4>@ViewBag.OrderIDD</h4>
                            <h3>Danh sách sản phẩm của đơn hàng:</h3>
                            <table class="table">
                                <thead class="thead-primary">
                                    <tr class="text-center">
                                        <th>ID</th>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Qty</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderDetails)
                                    {
                                        <tr>
                                            <td>@item.Product.Id</td>
                                            <td><img src="@item.Product.Image" alt="img" width="70px" height="70px"></td>
                                            <td>@item.Product.Name</td>
                                            <td>@item.Product.Price</td>
                                            <td>@item.Qty</td>
                                            <td>@item.Price</td>
                                        </tr>
                                    }

                                </tbody>
                            </table>

                            @* @if (@Model.Is_paid == false)
                        {
                            <a asp-controller="Orders" asp-action="Payment" asp-route-id="@Model.Id" class="btn btn-warning" style="float: right;margin-bottom: 20px;border-radius: 1px;color: white;">Thanh Toán Ngay!</a>
                        } *@

                            <h6 class="text-right" style="margin-right: 15px;color: #f3f3f3;">VAT: 10%</h6>
                            @if (Model.Is_paid == true)
                            {
                                <h5 class="text-right" style="margin-right: 15px;">Số tiền cần phải thanh toán: $0</h5>
                            }
                            else
                            {
                                <h5 class="text-right" style="margin-right: 15px;">Số tiền cần phải thanh toán: $@Model.Grand_total </h5>
                            }
                        }
                        else
                        {
                            <div class="container" style="margin-top:200px">
                                <h1>Thank You!</h1>
                                <a asp-controller="Home" asp-action="Index">Back To Home!</a>
                            </div>
                        }
                    </div>
                    <div><a asp-controller="Home" asp-action="Index">Back To Home!</a></div>
                </div>

            </div>

        </div>
    </section>
}
else
{
    <section class="home-slider owl-carousel">

        <div class="slider-item" style="background-image: url(images/bg_3.jpg);" data-stellar-background-ratio="0.5">
            <div class="overlay"></div>
            <div class="container">
                <div class="row slider-text justify-content-center align-items-center">

                    <div class="col-md-7 col-sm-12 text-center ftco-animate">
                        <h1 class="mb-3 mt-5 bread">Thank You!</h1>
                        <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Thank You</span></p>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section ftco-cart">
