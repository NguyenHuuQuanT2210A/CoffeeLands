@model List<CoffeeLands.Models.ProductCart>
@{
    ViewData["Title"] = "Cart";
    decimal total = 0;
    decimal subtotal = 0;
    decimal grandTotal = 0;
}

<section class="home-slider owl-carousel">

    <div class="slider-item" style="background-image: url(images/bg_3.jpg);" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row slider-text justify-content-center align-items-center">

                <div class="col-md-7 col-sm-12 text-center ftco-animate">
                    <h1 class="mb-3 mt-5 bread">Cart</h1>
                    <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Cart</span></p>
                </div>

            </div>
        </div>
    </div>
</section>

@{
    if (ViewBag.Cart != null && ((List<ProductCart>)ViewBag.Cart).Any())
    {
        // <p>@ViewBag.Cart</p>
        <section class="ftco-section ftco-cart">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 ftco-animate">
                        <div class="cart-list">
                            <table class="table">
                                <thead class="thead-primary">
                                    <tr class="text-center">
                                        <th>&nbsp;</th>
                                        <th>&nbsp;</th>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="text-center">
                                            <td class="product-remove"><a asp-area="" asp-controller="Products" asp-action="RemoveToCart" asp-route-id="@item.CartProduct.Id"><span class="icon-close"></span></a></td>

                                            <td class="image-prod"><div class="img" style="background-image:url(@item.CartProduct.Image);"></div></td>

                                            <td class="product-name">
                                                <h3>@Html.DisplayFor(modelItem => item.CartProduct.Name)</h3>
                                                <p style="color: #616162">@Html.DisplayFor(modelItem => item.CartProduct.Description)</p>
                                            </td>

                                            <td class="price">@Html.DisplayFor(modelItem => item.CartProduct.Price)</td>

                                            <td class="quantity">
                                                <div class="input-group mb-3">
                                                    <input type="text" name="buy_qty" class="quantity form-control input-number" value="@Html.DisplayFor(modelItem => item.Qty)" min="1" max="100">
                                                </div>
                                            </td>
                                            @{
                                                total = item.CartProduct.Price * item.Qty;
                                            }
                                            <td class="total">$@total</td>
                                            @{
                                                subtotal += total;
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-end">
                    <div class="col col-lg-3 col-md-6 mt-5 cart-wrap ftco-animate">
                        
                            <div class="cart-total mb-3">
                                <h3>Cart Totals</h3>
                                <p class="d-flex">
                                    <span>Subtotal</span>
                                <span class="cart-subtotal">$@subtotal</span>
                                </p>
                                <p class="d-flex">
                                    <span>VAT</span>
                                    <span>10%</span>
                                </p>
                                <hr>
                                @{
                                    if (subtotal == 0)
                                    {
                                        grandTotal = 0;
                                    }
                                    else
                                    {
                                    grandTotal = Math.Round(subtotal * 1.10m, 2);
                                    }

                                }
                                <p class="d-flex total-price">
                                    <span>Total</span>
                                <span class="cart-grandtotal">$@grandTotal</span>
                                </p>
                            </div>
                            <p class="text-center">
                                <a asp-area="" asp-controller="Orders" asp-action="Checkout"
                                   class="btn btn-primary py-3 px-4">Proceed to Checkout</a>
                            </p>
                    </div>
                </div>
            </div>
        </section>
    }
    else
    {
        <h3>Không có sản phẩm nào trong giỏ hàng!</h3>
    }
}
