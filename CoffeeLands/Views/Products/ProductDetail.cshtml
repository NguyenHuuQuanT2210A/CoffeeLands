                                    }
                                }
                                return `<div class="comment-container">

                                                    <div class="comment-img">
                                                        <!-- <div> -->
                                                                                <img src="wwwroot/customer/images/feedbacks/anh-1.jpg" alt="anh">
                                                        <!-- </div> -->
                                                    </div>
                                                    <div>
                                                        <div>
